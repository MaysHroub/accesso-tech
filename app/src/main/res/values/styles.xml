<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dark_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/very_dark_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="grey_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="white_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="extra_large_dark_text" parent="dark_text">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="extra_large_white_text" parent="white_text">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="large_dark_text" parent="dark_text">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="large_grey_text" parent="grey_text">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="large_white_text" parent="white_text">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="medium_dark_text" parent="dark_text">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="regular_dark_text" parent="dark_text">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="regular_grey_text" parent="grey_text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="regular_white_text" parent="white_text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="small_grey_text" parent="grey_text">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="white_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2c6e91</item>
    </style>

    <style name="coloured_button">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_light_grey_background</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:maxLength">24</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
    </style>

</resources>